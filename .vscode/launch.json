{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/client"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Backend (Node.js)",
      "program": "${workspaceFolder}/server/index.js", // or main backend entry file
      "cwd": "${workspaceFolder}/server",              // or your backend folder
      "runtimeExecutable": "node",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "PORT": "3000"
      }
    }
  ]
}